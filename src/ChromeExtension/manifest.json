{
  "name": "Facebook Pages Inbox Mark as Done",
  "short_name": "Mark as Done",
  "version": "1.0",
  "description": "An extension to mark all messages and comment notifications as done inside your Facebook Pages Inbox.",
  "manifest_version": 2,
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*/inbox/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}